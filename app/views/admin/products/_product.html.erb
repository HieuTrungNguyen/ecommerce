<tr class="product">
  <td><%= product.id %></td>
  <td><%= link_to product.name, admin_product_path(product) %></td>
  <td><%= image_tag product.image, size: "50x50", alt: product.name %></td>
    <td><%= product.price %></td>
  <td class="text-center"><%= product.quantity %></td>
  <td class="text-center">
    <%= link_to edit_admin_product_path(product), class: "btn btn-info" do %>
      <i class="fa fa-edit"></i> <%= t ".edit" %>
    <% end %>
    <%= link_to admin_product_path(product), method: :delete,
      data: {confirm: t(".sure")}, class: "btn btn-danger" do %>
      <i class="fa fa-trash"></i> <%= t ".delete" %>
    <% end %>
  </td>
</tr>
