<%= form_for [current_user, @order] do |f| %>
  <%= render "shared/error_messages", object: f.object %>

  <%= f.hidden_field :user_id, value: current_user.id, class: "form-control" %>

  <%= f.label :customer_name, t(".name") %>
  <%= f.text_field :customer_name, class: "form-control" %>
  <%= f.label :customer_phone, t(".phone") %>
  <%= f.text_field :customer_phone, class: "form-control" %>
  <%= f.label :customer_address, t(".address") %>
  <%= f.text_field :customer_address, class: "form-control" %>
  <%= f.label :customer_city, t(".city") %>
  <%= f.text_field :customer_city, class: "form-control" %>
  <%= f.label :customer_country, t(".country") %>
  <%= f.text_field :customer_country, class: "form-control" %>
  <%= f.submit yield(:button_text), class: "btn btn-primary" %>
<% end %>
