<div class="row">
  <div class="col-md-10 col-md-offset-1">
    <h3><%= t ".order_history" %></h3>
    <hr>
    <table class="table table-hover">
      <thead>
        <tr>
          <th><%= t ".number" %></th>
          <th><%= t ".customer_name" %></th>
          <th><%= t ".customer_phone" %></th>
          <th><%= t ".date" %></th>
          <th><%= t ".status" %></th>
          <th><%= t ".total" %></th>
          <th><%= t ".action" %></th>
        </tr>
      </thead>
      <tbody id="orders">
        <%= render @orders %>
      </tbody>
    </table>
    <%= will_paginate @products %>
  </div>
</div>
