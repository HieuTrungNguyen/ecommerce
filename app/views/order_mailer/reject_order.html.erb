<p>Dear <%= @user.name %>,</p>
<p>Welcome to the Ecommerce47! Your order has been rejected this order successfully!</p>
<br>
<h3>This is your order details informataion.</h3>
<div class="row pad-top-botm client-info">
  <div class="col-md-6">
    <h4><strong><%= t "order_items.index.client_inform" %></strong></h4>
    <strong><%= t "order_items.index.name" %> <%= @order.customer_name %></strong>
    <br>
    <b><%= t "order_items.index.phone" %></b> <%= @order.customer_phone %>
    <br>
    <b><%= t "order_items.index.address" %></b> <%= @order.customer_address %>
    <br>
    <b><%= t "order_items.index.city" %></b> <%= @order.customer_city %>
    <br>
    <b><%= t "order_items.index.country" %></b> <%= @order.customer_country %>
  </div>
  <div class="col-md-6">
    <h4><strong><%= t "order_items.index.payment_details" %></strong></h4>
    <b><%= t "order_items.index.bill_account" %></b> <%= t "price", price: @order.total_price %>
    <br>
    <b><%= t "order_items.index.purchase_date" %></b> <%= @order.created_at %>
  </div>
</div>
<div class="row">
  <div class="table-responsive">
    <table class="table table-hover table-striped">
      <thead>
        <tr>
          <th><%= t "order_items.index.number" %></th>
          <th><%= t "order_items.index.items" %></th>
          <th><%= t "order_items.index.quantity" %></th>
          <th><%= t "order_items.index.unit_price" %></th>
          <th><%= t "order_items.index.sub_total" %></th>
        </tr>
      </thead>
      <tbody>
        <% @order.order_items.each do |order_item| %>
          <tr>
            <td><%= order_item.id %></td>
            <td><%= order_item.product_name %></td>
            <td><%= order_item.quantity %></td>
            <td><%= t "price", price: order_item.unit_price %></td>
            <td><%= t "price", price: order_item.total_price %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <div class="ttl-amts">
    <h5>
      <strong>
        <%= t "order_items.index.total" %> <%= t "price", price: @order.total_price %>
      </strong>
    </h5>
  </div>
</div>
